<% @plays.each do |play| %>
  <div class="card_play">
    <div class="card_play_infos">
      <div>
        <p>Casino: <%= play.casino_id %></p>
        <p>Owner: <%= play.user_id %></p>
        <p>Created: <%= play.created_at.strftime("%d/%m/%y") %></p>
        <p>Amount: <%= play.amount %></p>
        <p>------------------------></p>

      </div>
    </div>
  </div>
  <% end %>



<div class="col-xs-12 col-sm-12 col-sm-offset-4">
  <div class="form-log">
    <% @random_play = Play.last %>
    <%= simple_form_for @random_play do |f| %>
        <%#= f.input  :name, label: "What's the task?", error: "Name is mandatory, please specify one" %>
        <%#= f.input  :category, collection: ["Cleaning", "Computering", "Driving", "Ironing", "Moving", "Gardening", "Other"] %>
        <%#= f.input  :description, label: "Describe the task:" %>
        <%#= f.input  :address, label: "Put the address:" %>
        <%#= f.input :picture, label: "Picture of the task?" %>
        <%#= f.input :picture_cache, as: :hidden %>
        <%#= f.input  :price, hint: 'Insert a price.' %>
        <%#= f.button :submit, "Create the task", class: "btn btn-success" %>
        <%= f.input  :casino_id, label: "Insert casino ID:" %>
        <%= f.input  :amount, hint: 'Insert amount:' %>
        <%= f.button :submit, "Create the task", class: "btn btn-success" %>



      <% end %>
  </div>
</div>
